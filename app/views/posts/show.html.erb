<div class="page-header" >
  <p>
    <h1><%= @post.title %></h1>
  </p>
  <p>
    <h3><em><%= @post.subtitle %></em></h3>
  </p>
  <p>
    <h4>By <%= @post.user.email %></h4>
  </p>
</div>

<div>
  <p>
    <%= @post.text %>
  </p>
</div>
<hr>
<div>
  <h4>Add a comment:</h4>
  <%= render 'comments/form' %>
</div>
<hr>
<div>
  <h3>Comments:</h3>
  <%= render @post.comments.reject(&:new_record?) %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>
