<div class="page-header" >
<h1>All posts</h1>
<%= link_to 'Create new post', new_post_path, class: "btn btn-primary"%>
</div>


<div class="list-group">
    <% @posts.each do |post| %>
      <%= link_to post_path(post), class: "list-group-item" do%>
        <h4><%= post.title %></h4>
        <p><%= post.subtitle %></p>
        <small>posted by <%= post.user.email %> at <%= post.created_at.strftime('%I:%M%p %m/%d/%Y') %></small>
      <% end %>
    <% end %>
</div>
