<div class="page-header" >
  <p>
    <h1><%= @article.title %></h1>
  </p>
  <p>
    <h3><em><%= @article.subtitle %></em></h3>
  </p>
</div>

<div>
  <p>
    <%= @article.text %>
  </p>
</div>
<hr>
<div>
  <h4>Add a comment:</h4>
  <%= render 'comments/form' %>
</div>
<hr>
<div>
  <h3>Comments:</h3>
  <%= render @article.comments %>
</div>

<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>
